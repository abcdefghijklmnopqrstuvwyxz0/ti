  display: none;
  background-color: #FF8264AB;
  color: #eeebeb;
  cursor: pointer;
  padding: 5px;
  width: 100%;
  border: none;
  text-align: left;
  outline: none;
  transition: 0.4s;
  border-radius: 15px;
  margin-bottom: 5px;
  font-size: 0.9rem;
}

